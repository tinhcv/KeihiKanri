<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_node"
    android:backgroundTint="@color/tertiary_color"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/monthName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="month"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_weight="0.2"
            android:layout_marginStart="9dp"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/moving_black_48dp"
            app:tint="#00AC17" />

        <TextView
            android:id="@+id/income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="income"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginStart="9dp"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:rotation="180"
            android:rotationX="0"
            android:rotationY="180"
            app:srcCompat="@drawable/moving_black_48dp"
            app:tint="#F00" />

        <TextView
            android:id="@+id/outcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="outcome"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:layout_marginStart="9dp"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/dropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@null"
            app:srcCompat="@drawable/expand_more_black_48dp" />

    </LinearLayout>

    <!--    Dynamically generate linearlayout for expenditure list here -->
    <LinearLayout
        android:id="@+id/consumptionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_node"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        >

<!--        <include-->
<!--            layout="@layout/home_consumption_details"-->
<!--            />-->

    </LinearLayout>

</LinearLayout>